{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Run Extension (code-server)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "code-server",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "/config/workspace"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
