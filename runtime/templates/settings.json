{
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.view.defaultView": "workbench.view.extension.envhaven-sidebar",
  "workbench.tips.enabled": false,
  "workbench.enableExperiments": false,
  "update.showReleaseNotes": false,
  "update.mode": "none",
  "security.workspace.trust.enabled": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/bin/zsh"
    }
  },
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "outline.showVariables": false,
  "outline.showProperties": false,
  "workbench.panel.defaultLocation": "bottom",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.hideCondition": "singleTerminal",
  "debug.console.closeOnEnd": true,
  "debug.openDebug": "neverOpen",
  "debug.internalConsoleOptions": "neverOpen",
  "output.smartScroll.enabled": false,
  "problems.visibility": false,
  "outline.collapseItems": "alwaysCollapse",
  "timeline.excludeSources": [
    "*"
  ],
  "editor.fontFamily": "ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
  "editor.fontSize": 12,
  "editor.fontLigatures": false,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "selection",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.wordWrap": "off",
  "terminal.integrated.fontFamily": "ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultLocation": "bottom",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/venv": true,
    "**/.venv": true
  },
  "telemetry.telemetryLevel": "off",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "chat.commandCenter.enabled": false,
  "workbench.statusBar.visible": false,
  "terminal.integrated.hideOnStartup": "never",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName} â€” EnvHaven",
  "scm.providerCountBadge": "hidden",
  "git.decorations.enabled": false,
  "git.autofetch": false,
  "git.suggestSmartCommit": false,
  "extensions.ignoreRecommendations": true
}
